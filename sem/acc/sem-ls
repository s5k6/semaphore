#!/bin/bash
set -u -e -C;
shopt -s nullglob;

function err { echo "$@" >&2; exit 1; }
function warn { echo "$@" >&2; }

prefix='/dev/shm/sem.';   # see sem_overview(7)

pattern="${1:-*}";

found=false;
for i in ${prefix}${pattern}; do
    s="/${i#${prefix}}";
    stat -c "%10A %8U %8G ${s} $(sem "${s}" -q -v0 2>/dev/null || echo '?')" "${i}";
    found=true;
done;

${found} && exit 0;
exit 1;
